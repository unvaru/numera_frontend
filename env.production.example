# Production Environment Configuration for Penstip
# Copy this file to .env.production and update with your actual values

# API Configuration
VITE_API_BASE_URL=https://api.penstip.com
VITE_API_TIMEOUT=30000
VITE_API_VERSION=v1

# Application Configuration
VITE_APP_NAME=Penstip
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_OFFLINE_MODE=false

# Security Configuration
VITE_ENABLE_HTTPS_ONLY=true
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true

# CDN Configuration
VITE_CDN_URL=https://cdn.penstip.com
VITE_ASSET_VERSION=1.0.0

# Monitoring Configuration
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Payment Configuration (if applicable)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_key
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cache Configuration
VITE_CACHE_DURATION=3600
VITE_SERVICE_WORKER_ENABLED=true

# Development/Production Flags
DEV=false
NODE_ENV=production 